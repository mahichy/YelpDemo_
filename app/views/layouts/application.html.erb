<!DOCTYPE html>
<html>
  <head>
    <title>YelpDemo</title>
    <%= render 'shared/bootstrap' %>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div class="container-fluid">

      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissable"> 
            <button type="button" class="close" data-dismiss="alert"> <span aria-hidden="true">&time;</span><span class="sr-only">Close</span></button>
            <%= content_tag :div, msg, :id => "flash_#{name}"%>
          </div>
        <% end -%>
      <% end -%>

      
      <%= yield %>
      <%= render 'shared/footer' %>
    </div>
  </body>
  
</html>
