<div class="row">
	<div class="col-md-3">
		<%= image_tag @resturent.image_url %>
			<h2>
			  <%= @resturent.name %>
			</h2>

			<p>
			  <strong>Address:</strong>
			  <%= @resturent.address %>
			</p>

			<p>
			  <strong>Phone:</strong>
			  <%= @resturent.phone %>
			</p>

			<p>
			  <strong>Website:</strong>
			  <%= link_to @resturent.website, @resturent.website  %>
			</p>


			<%= link_to "Create Review",  new_resturent_review_path(@resturent), class: "btn btn-primary" %>
	</div>

	<div class="col-md-9">
			<% if @reviews.blank? %>
				<h3>No reviews yet. Be the first to write one!</h3>
			<% else %>
				<% @reviews.each do |review|%>

				<div class="col-md-3">
					<%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]},"%>
					<p><%= review.created_at.strftime("%-m/%-d/%y") %></p>
				</div>

			<div class="col-md-9">
					<div class="star-rating" data-score= <%= review.rating %>></div>
					<p><%= review.comment %></p>
			</div>
				
			<% end -%>
		<% end -%>
	</div>
</div>



<%= link_to 'Edit', edit_resturent_path(@resturent), class: "btn btn-link" %> |
<%= link_to 'Back', resturents_path, class: "btn btn-link" %>

<script>
$('.star-rating').raty({
	path: '/assets',
	readOnly: true,
	score: 1

});
</script>

